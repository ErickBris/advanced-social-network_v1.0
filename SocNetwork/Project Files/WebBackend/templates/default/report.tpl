<div class="panel panel-default smallP">
	<div class="panel-heading">
		{__LNG.report}
	</div>
	<div class="panel-body">
		<div id="message" class="text-center"></div>
		<form id="report-form" action="" method="post">
			<input type="text" class="input form-control" name="email" placeholder="{__LNG.email}">
			<textarea class="form-control" name="links" placeholder="{__LNG.links}"></textarea>
			<textarea class="form-control" name="reason" placeholder="{__LNG.reason}"></textarea>
			<input type="submit" class="btn btn-success form-control" value="{__LNG.report}">
		</form>
	</div>
</div>