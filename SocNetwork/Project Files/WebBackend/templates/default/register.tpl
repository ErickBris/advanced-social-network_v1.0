<div class="panel panel-default smallP">
	<div class="panel-heading">
		{__LNG.register}
	</div>
	<div class="panel-body">
		<div id="message" class="text-center"></div>
		<form id="register-form" action="" method="post">
			<input type="text" class="input form-control" placeholder="{__LNG.username}" name="username">
			<input type="text" class="input form-control" placeholder="{__LNG.email}" name="email">
			<input type="password" class="input form-control" placeholder="{__LNG.password}" name="password">
			<input type="password" class="input form-control" placeholder="{__LNG.password_confirm}" name="password-confirm">
			<input type="submit" class="btn btn-success form-control" value="{__LNG.register}">
		</form>
	</div>
</div>