<div class="panel panel-default smallP">
	<div class="panel-heading">
		<span class="glyphicon glyphicon-stats"></span> {__LNG.statistics}
	</div>
	<div class="panel-body">
		<table class="table table-bordered">
			<tr>
				<td><span class="label label-primary"><span class="glyphicon glyphicon-link"></span> {__LNG.url}:</span><br><label>{url.url}</label></td>
			</tr>
			<tr>
				<td><span class="label label-success"><span class="glyphicon glyphicon-info-sign"></span> {__LNG.hash}:</span><br><label>{url.hash}</label></td>
			</tr>
			<tr>
				<td><span class="label label-danger"><span class="glyphicon glyphicon-signal"></span> {__LNG.total_visits}:</span><br><label>{url.visits}</label></td>
			</tr>
			<tr>
				<td><span class="label label-info"><span class="glyphicon glyphicon-eye-open"></span> {__LNG.last_visit}:</span><br><label>{url.last_visit}</label></td>
			</tr>
			<tr>
				<td><span class="label label-warning"><span class="glyphicon glyphicon-time"></span> {__LNG.created_date}:</span><br><label>{url.date}</label></td>
			</tr>
		</table>
	</div>
</div>