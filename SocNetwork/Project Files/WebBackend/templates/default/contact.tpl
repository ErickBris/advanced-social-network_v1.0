<div class="panel panel-default smallP">
	<div class="panel-heading">
		{__LNG.contact}
	</div>
	<div class="panel-body">
		<div id="message" class="text-center"></div>
		<form id="contact-form" action="" method="post">
			<input type="text" class="input form-control" name="name" placeholder="{__LNG.name}">
			<input type="text" class="input form-control" name="email" placeholder="{__LNG.email}">
			<input type="text" class="input form-control" name="subject" placeholder="{__LNG.subject}">
			<textarea name="message" class="form-control" placeholder="{__LNG.message}"></textarea>
			<input type="submit" class="btn btn-success form-control" value="{__LNG.send}">
		</form>
	</div>
</div>